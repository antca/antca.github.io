@import 'nib'
@import 'variables'
@import 'bootstrap'
@import 'resume'
@import 'components/*'

*
  box-sizing border-box

html, body
  margin 0
  padding 0
  width 100%
  height 100%
  background-color color0
  font-family Open Sans, sans-serif

noscript
	position relative
	display block
	height 100%
	max-width 480px
	margin 0 auto

.noscript-container
	position absolute
	width 100%
	top 50%
	background-color color2

.sheet-container
  box-shadow 0px 0px 10px black, 5px 5px 5px rgba(0, 0, 0, 0.8)
  padding 20px
  margin 20px
  overflow hidden
  background-color white
  
.guide
  display inline-block
  height 100%
  padding 0
  margin 0
  vertical-align middle
  
@media only screen and (max-width 480px)
  .sheet-container
  	margin-left 0
  	margin-right 0
  	