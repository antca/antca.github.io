.drawer-menu_wrap
  position fixed
  width 200px
  right -200px
  top 0
  z-index 200
  height 100%
  background-color color4
  transition right 0.5s, box-shadow 0.5s
  text-align center

.drawer-menu_wrap.drawer-menu--open
  right 0
  box-shadow 0px 0px 5px black

.drawer-menu_section.header_section
  display block
  margin 5px

@media only screen and (min-width: 960px)
  .drawer-menu_wrap.drawer-menu--open
    right -200px
