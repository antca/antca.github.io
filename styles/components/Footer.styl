$footer-height = 75px

.footer_wrap
  position absolute
  bottom 0
  width 100%
  height $footer-height
  padding-bottom 10px

.footer_main
  color color3
  position relative
  background-color color4
  height 100%
  text-align center
  border-radius 5px
  box-shadow 5px 5px 5px #000000
  p
    display inline-block
    margin 0
    vertical-align middle
    padding-right 150px
    padding-left 5px
.profiles
  position absolute
  top 0
  right 0
  height $footer-height
  line-height $footer-height - 10
  font-size 40px
  color white
  margin-right 10px
  i:before
    color white
    margin-right 20px